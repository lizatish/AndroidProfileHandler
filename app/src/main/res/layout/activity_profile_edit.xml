<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Назад"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonClear"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="Добавить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonClear" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="Очистить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonAdd"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonBack" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="266dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:text="Новая анкета"
        android:textAlignment="center"
        android:textColorHint="#2196F3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="554dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonClear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewInitals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ф.И.О:"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/surname"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:ems="10"
                android:hint="Фамилия"
                android:inputType="textPersonName"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:ems="10"
                android:hint="Имя"
                android:inputType="textPersonName"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/patronymic"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:ems="10"
                android:hint="Отчество"
                android:inputType="textPersonName"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Образование:"
                android:textSize="22dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/isIncompleteEducation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Неполное среднее"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Среднее"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/isHigherEducation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Высшее"
                    android:textSize="18dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textViewBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Отрасль:"
                android:textSize="22dp" />

            <Spinner
                android:id="@+id/spinnerBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Опыт работы"
                android:textSize="22dp" />

            <Spinner
                android:id="@+id/spinnerExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewSalaryLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Желаемый уровень зарплаты:"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <SeekBar
                android:id="@+id/salaryLevelSeekBar"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <TextView
                android:id="@+id/textViewEmployment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Тип желаемой занятости:"
                android:textSize="22dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/isFullEmployment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Полная занятость"
                        android:textSize="18dp" />

                    <CheckBox
                        android:id="@+id/isOneTimeEmployment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Разовая работа"
                        android:textSize="18dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/isPartEmployment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Частичная занятость"
                        android:textSize="18dp" />

                    <CheckBox
                        android:id="@+id/isInternshipEmployment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Стажировка"
                        android:textSize="18dp" />
                </TableRow>

            </TableLayout>

            <ToggleButton
                android:id="@+id/isNoPhysicalBoundaries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:id="@+id/isNoCriminalRecprds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewAdditionalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дополнительная информация от соискателя:"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:ems="10"
                android:hint="Укажите здесь дополнительную информацию"
                android:inputType="textPersonName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewDataProcessing"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="5" />

                <Switch
                    android:id="@+id/IsAgreetoDataProcessing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>